<script>
    
    // var productsCall = AdministratorProducts;
    // productsCall.WebsiteUrl = "<?php echo URL::to('/'); ?>";

    function actionType(action, anotherID, year, month)
    {   
        var r = confirm("Are you sure you want to delete this account?");

        if (r == true)
        {

           var urlPathAddToCart = "<?php echo URL::to('/data/events/delete/'); ?>" + "/" +anotherID + "/" + year + "/" + month;

            $.ajax({
                type: "POST",
                url: urlPathAddToCart,
                dataType: "json",
                success: function(data)
                {
                    if (data.status)
                    {
                        $('#dataTables-example tr#row_'+anotherID).remove();                    
                    }
                    else 
                    {
                        
                    }
                },
                error: function()
                {
                    
                }
            });

        }

    }

</script> 